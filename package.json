{
  "name": "voxi-desktop-video-app",
  "productName": "Voxi Desktop Audio App",
  "version": "1.0.0",
  "description": "Cross-platform audio device detection and recording app with native device classification",
  "main": "main.js",
  "homepage": "https://github.com/kmhari/voxi-desktop-video-app",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "dist": "npm run build",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "audio",
    "recording",
    "device-detection",
    "cross-platform",
    "voxi"
  ],
  "author": {
    "name": "Voxi Team",
    "email": "team@voxi.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.voxi.desktop.audio.app",
    "productName": "Voxi Desktop Audio App",
    "copyright": "Copyright Â© 2024 Voxi Team",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js", 
      "index.html",
      "cross/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "cross/",
        "to": "cross/"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "zip",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "category": "AudioVideo",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "tar.gz",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Voxi Desktop Audio App"
    },
    "dmg": {
      "title": "Voxi Desktop Audio App",
      "background": "assets/dmg-background.png",
      "window": {
        "width": 600,
        "height": 400
      }
    },
    "publish": {
      "provider": "github",
      "owner": "kmhari",
      "repo": "voxi-desktop-video-app"
    }
  }
}
